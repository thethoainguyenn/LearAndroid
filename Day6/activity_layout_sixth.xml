<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:background="#e67e22"
            android:gravity="center"
            android:text="100%"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:background="#2ecc71"
            android:text="50%"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:background="#9b59b6"
            android:text="22%"
            android:layout_weight="22"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:text="200dp"
            android:background="#3498db"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
        <TextView
            android:gravity="center"
            android:text="Còn lại"
            android:background="#8e44ad"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:text="200dp"
                android:background="#e67e22"
                android:layout_width="200dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:background="#f39c12"
                android:text="30%"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:background="#2ecc71"
                android:text="70%"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:text="100dp"
            android:background="#2980b9"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="100dp"
                android:gravity="center"
                android:text="Còn lại"
                android:background="#9b59b6"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:text="100dp"
                android:background="#2980b9"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:text="100dp"
            android:background="#e74c3c"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="100dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="30%"
                    android:gravity="center"
                    android:background="#f1c40f"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="70%"
                    android:background="#2ecc71"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:gravity="center"
                android:text="100dp"
                android:background="#e74c3c"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:text="70dp"
            android:background="#2980b9"
            android:layout_width="70dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:weightSum="2"
            android:background="#8e44ad"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="end"
                android:orientation="horizontal"
                android:background="#27ae60"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="70dp"
                    android:text="Còn lại"
                    android:background="#8e44ad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="70dp"
                    android:background="#2980b9"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:background="#27ae60"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="70dp"
                        android:text="Còn lại"
                        android:background="#8e44ad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:text="70dp"
                        android:background="#2980b9"
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:text="70dp"
            android:background="#d35400"
            android:layout_width="70dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:weightSum="2"
            android:background="#8e44ad"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="end"
                android:orientation="horizontal"
                android:background="#27ae60"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="70dp"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:text="30%"
                        android:background="#f39c12"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="70%"
                        android:gravity="center"
                        android:background="#27ae60"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:gravity="center"
                    android:text="70dp"
                    android:background="#d35400"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:background="#27ae60"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:text="30%"
                        android:background="#f39c12"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="70%"
                        android:gravity="center"
                        android:background="#27ae60"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:text="70dp"
                        android:background="#d35400"
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

